
# === Binance API Keys (create on Spot Testnet: https://testnet.binance.vision/ ) ===
API_KEY=YOUR_TESTNET_API_KEY
API_SECRET=YOUR_TESTNET_API_SECRET

# === Trading Settings ===
USE_TESTNET=true
SYMBOLS=BTCUSDT,ETHUSDT
INTERVAL=15m
BASE_ASSET=BTC
QUOTE_ASSET=USDT

# Engine options
STRATEGY=rsi   # rsi | macd
RISK_PER_TRADE_PCT=1.0
MAX_OPEN_TRADES=1
TAKE_PROFIT_PCT=1.0
STOP_LOSS_PCT=0.7     # e.g. 0.7% below entry
DRY_RUN=true          # if true, no orders are sent

# Scheduler (cron format or 'interval-ms')
SCHEDULE_CRON=*/5 * * * *     # every 5 minutes
# or use INTERVAL_MS=60000     # every 60 seconds
